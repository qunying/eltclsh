TOPBUILD=..
include $(TOPBUILD)/config.mk

topsrcdir=	@top_srcdir@
srcdir=		@srcdir@

prefix=		@prefix@
datadir=	@datadir@/eltcl

VPATH=		$(srcdir)

ifeq (,$(HOST_ELTCLSH))
HOST_ELTCLSH=$(TOPBUILD)/src/$(ELTCLSH)
endif

# -----------------------------------------------------------------------

tclsrcs = \
	init.tcl	\
	tools.tcl	\
	complete.tcl


# --- basic rules --------------------------------------------------------

.PHONY: all
all:


# --- installation ------------------------------------------------------

.PHONY: install
install: install-data

install-data: $(tclsrcs)
	${INSTALL} -d ${datadir}
	@for file in ${tclsrcs}; do \
		srcfile=${srcdir}/$${file}; \
		destfile=${datadir}/$${file}; \
		cmd="${INSTALL_DATA} $${srcfile} ${datadir}"; \
		printf "$${cmd}\n"; \
		$${cmd}; \
	done
	@if test "x$(HOST_ELTCLSH)" = "x:"; then \
		echo "***"; \
		echo "*** NOT rebuilding package index in ${datadir}"; \
		echo "***"; \
	else \
		cmd="$(HOST_ELTCLSH) ${topsrcdir}/mkIndex ${datadir}"; \
		printf "$${cmd}\n"; \
		$${cmd}; \
	fi



# --- cleaning ----------------------------------------------------------

.PHONY: clean
clean:


# --- dependencies ------------------------------------------------------

.PHONY: depends
depends:
