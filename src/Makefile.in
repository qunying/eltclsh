TOPBUILD=..
include $(TOPBUILD)/config.mk

topsrcdir=	@top_srcdir@
srcdir=		@srcdir@

prefix=		@prefix@
exec_prefix=	@exec_prefix@
bindir=		@bindir@
libdir=		@libdir@
datadir=	@datadir@/eltcl

libobjs=	@LIBOBJS@

vpath %.c	$(srcdir) $(topsrcdir)/compat

CPPFLAGS+=	-I$(TOPBUILD) -I. $(TCL_CPPFLAGS) $(EL_CPPFLAGS)
CPPFLAGS+=	-DELTCLSH_DATA='"${datadir}"'
CPPFLAGS+=	-DELTCLSH_LIBDIR='"${libdir}"'
CPPFLAGS+=	-DELTCLSH_VERSION='"$(ELTCLSH_VERSION)"'

ELWISH_CPPFLAGS+=$(TK_CPPFLAGS)


# -----------------------------------------------------------------------

commonsrcs = \
	el.c		\
	loop.c		\
	init.c		\
	parse.c		\
	signal.c	\
	complete.c
commonobjs = $(commonsrcs:.c=.o) $(libobjs)

eltclshsrcs = eltclsh.c
eltclshobjs = $(eltclshsrcs:.c=.o)

elwishsrcs = elwish.c
elwishobjs = $(elwishsrcs:.c=.o)


# --- basic rules --------------------------------------------------------

all: $(ELTCLSH)

ifeq (yes,$(HAS_TK))
all: $(ELWISH)
endif

# binaries
$(ELTCLSH): $(eltclshobjs) $(commonobjs)
	$(LTLD) -o $@ $(CFLAGS) $(eltclshobjs) $(commonobjs) \
		$(LDFLAGS) $(TCL_LDFLAGS) $(EL_LDFLAGS)

$(ELWISH): $(elwishobjs) $(commonobjs)
	$(LTLD) -o $@ $(CFLAGS) $(elwishobjs) $(commonobjs) \
		$(LDFLAGS) $(TCL_LDFLAGS) $(TK_LDFLAGS) $(EL_LDFLAGS)


# object files
${commonobjs} ${eltclshobjs}:%.o: %.c
	$(CC) -c -o $@ $(CFLAGS) $(CPPFLAGS) $<

${elwishobjs}:%.o: %.c
	$(CC) -c -o $@ $(CFLAGS) $(CPPFLAGS) $(ELWISH_CPPFLAGS) $<


# --- installation ------------------------------------------------------

.PHONY: install
install: install-bin

install-bin:: $(ELTCLSH)
	$(INSTALL) $(ELTCLSH) $(bindir)/$(ELTCLSH)

ifeq (yes,$(HAS_TK))
install-bin:: $(ELWISH)
	$(INSTALL) $(ELWISH) $(bindir)/$(ELWISH)
endif


# --- cleaning ----------------------------------------------------------

clean:
	rm -f $(commonobjs) $(eltclshobjs) $(elwishobjs) dependencies


# --- dependencies ------------------------------------------------------

.PHONY: depends

depends dependencies:: $(eltclshsrcs) $(commonsrcs)
	$(MKDEP) -c$(CC) -odependencies $(CPPFLAGS) $?
ifeq (yes,$(HAS_TK))
depends dependencies:: $(elwishsrcs)
	$(MKDEP) -c$(CC) -odependencies $(CPPFLAGS) $(ELWISH_CPPFLAGS) $?
endif

init.o: Makefile

ifneq (${MAKECMDGOALS},clean)
-include dependencies
endif
