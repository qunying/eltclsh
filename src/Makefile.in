top_builddir=	@top_builddir@
include $(top_builddir)/config.mk

topsrcdir=	@top_srcdir@
srcdir=		@srcdir@

prefix=		@prefix@
exec_prefix=	@exec_prefix@
bindir=		@bindir@
libdir=		@libdir@
datarootdir=	@datarootdir@
datadir=	@datadir@/eltcl

libobjs=	@LIBOBJS@

vpath %.c	$(srcdir) $(topsrcdir)/compat

CPPFLAGS+=	-I$(top_builddir) -I. $(TCL_CPPFLAGS) $(EL_CPPFLAGS)
CPPFLAGS+=	-DELTCLSH_DATA='"${datadir}"'
CPPFLAGS+=	-DELTCLSH_LIBDIR='"${libdir}"'
CPPFLAGS+=	-DELTCLSH_VERSION='"$(ELTCLSH_VERSION)"'

ELWISH_CPPFLAGS+=$(TK_CPPFLAGS)


# -----------------------------------------------------------------------

pkgsrcs = \
	el.c		\
	init.c		\
	parse.c		\
	signal.c	\
	complete.c
pkgobjs = $(pkgsrcs:.c=.lo) $(libobjs:.o=.lo)

commonsrcs = \
	loop.c
commonobjs = $(commonsrcs:.c=.lo)

eltclshsrcs = eltclsh.c
eltclshobjs = $(eltclshsrcs:.c=.lo)

elwishsrcs = elwish.c
elwishobjs = $(elwishsrcs:.c=.lo)


# --- basic rules --------------------------------------------------------

all: lib$(ELPKG).la $(ELTCLSH)

ifeq (yes,$(HAS_TK))
all: $(ELWISH)
endif

# binaries
$(ELTCLSH): $(eltclshobjs) $(commonobjs)
	$(LTLD) -o $@ $(CFLAGS) $(eltclshobjs) $(commonobjs) \
		$(LDFLAGS) $(TCL_LDFLAGS) $(EL_LDFLAGS)

$(ELWISH): $(elwishobjs) $(commonobjs)
	$(LTLD) -o $@ $(CFLAGS) $(elwishobjs) $(commonobjs) \
		$(LDFLAGS) $(TCL_LDFLAGS) $(TK_LDFLAGS) $(EL_LDFLAGS)

# package - Tcl and libtool don't cohabit well
#
# - don't use libtool's '-module' because on Darwin this will produce a
#   .so, while Tcl expects a .dylib. Not sure who is wrong here.
#
# - try *hard* to have libtool link against the tcl stubs by using -XCClinker
#   (that passes its arguments verbatim to CC during link). The problem is that
#   libtool sees a .a archive and deduces that the objects inside are not
#   PIC, although they of course are. Cleary libtool is missing something here.
#
lib$(ELPKG).la: $(pkgobjs)
	$(LTLD) -avoid-version -o $@ $(CFLAGS) $(pkgobjs)		\
		$(addprefix -XCClinker ,$(TCLSTUB_LDFLAGS))		\
		-rpath $(datadir) $(LDFLAGS) $(EL_LDFLAGS)

# object files
${pkgobjs}:%.lo: %.c
	$(LTCC) -c -o $@ $(CFLAGS) $(CPPFLAGS) $(TCLSTUB_CPPFLAGS) $<

${commonobjs}:%.lo: %.c
	$(LTCC) -c -o $@ $(CFLAGS) $(CPPFLAGS) $<

${eltclshobjs}:%.lo: %.c
	$(LTCC) -c -o $@ $(CFLAGS) $(CPPFLAGS) $<

${elwishobjs}:%.lo: %.c
	$(LTCC) -c -o $@ $(CFLAGS) $(CPPFLAGS) $(ELWISH_CPPFLAGS) $<

# --- installation ------------------------------------------------------

.PHONY: install
install: install-bin

install-bin:: $(ELTCLSH) lib$(ELPKG).la
	$(MKINSTALLDIRS) $(DESTDIR)$(bindir)
	$(LIBTOOL) --mode=install $(INSTALL) $(ELTCLSH) $(DESTDIR)$(bindir)
	$(MKINSTALLDIRS) $(DESTDIR)$(datadir)
	$(LIBTOOL) --mode=install $(INSTALL) lib$(ELPKG).la $(DESTDIR)$(datadir)

ifeq (yes,$(HAS_TK))
install-bin:: $(ELWISH)
	$(MKINSTALLDIRS) $(DESTDIR)$(bindir)
	$(LIBTOOL) --mode=install $(INSTALL) $(ELWISH) $(DESTDIR)$(bindir)
endif


# --- cleaning ----------------------------------------------------------

clean:
	$(LIBTOOL) --mode=clean rm -f $(commonobjs) $(pkgobjs) lib$(ELPKG).la
	$(LIBTOOL) --mode=clean rm -f $(eltclshobjs) $(ELTCLSH)
	$(LIBTOOL) --mode=clean rm -f $(elwishobjs) $(ELWISH)
	rm -f dependencies


# --- dependencies ------------------------------------------------------

.PHONY: depends

depends dependencies:: $(eltclshsrcs) $(commonsrcs) $(pkgsrcs)
	$(MKDEP) -c$(CC) -odependencies $(CPPFLAGS) $?
ifeq (yes,$(HAS_TK))
depends dependencies:: $(elwishsrcs)
	$(MKDEP) -c$(CC) -odependencies $(CPPFLAGS) $(ELWISH_CPPFLAGS) $?
endif

init.o: Makefile

ifneq (${MAKECMDGOALS},clean)
-include dependencies
endif
